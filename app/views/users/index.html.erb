<p id="notice"><%= notice %></p>

<h1>Users</h1>
<div class="table-responsive">
<table class="table-hover"> 
    <thead>
      <tr>
        <th>Name</th>
        <th>Nick</th>
        <th>Email</th>
        <th>Address</th>
        <th>Password</th>
        <th>Zipcode</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.Name %></td>
          <td><%= user.Nick %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.Password %></td>
          <td><%= user.ZipCode %></td>
          <td><%= user.phone %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

