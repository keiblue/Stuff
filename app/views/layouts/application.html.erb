<!DOCTYPE html>
<html>
  <head>
    <title>ChoroStore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div class="container-fluid no-padding">
    <nav>
      <div class="col-md-12 no-padding">
        <div class="col-md-2 col-sm-10 no-padding">
          <%= link_to image_tag("/images/logo2.png", class: "img-responsive") , root_path%>
          <!--<a href="#"><img src="https://scontent.fscl3-1.fna.fbcdn.net/v/t1.0-1/p200x200/16640673_985017418298768_6735879098055262724_n.png?oh=5692627c3295fe21977c787cfff158a0&oe=59251F21" alt="logo" class="logo"></a>-->
        </div>
        <div class="col-md-10 col-sm-2 no-padding navmenu">
          <ul class="col-md-12 no-padding row">
            <li class="btn col-md-3 col-md-offset-1"><%= link_to 'Quienes Somos', root_path %></li>
            <li class="btn col-md-3"><%= link_to 'Catalogo', root_path %></li>
            <li class="btn col-md-3"><%= link_to 'Contacto', root_path %></li>
            <% unless user_signed_in? %> 
            <li class="btn col-md-1 "><%= link_to 'Login', new_user_session_path %></li>
            <li class="btn col-md-1"><%= link_to 'New User', new_user_registration_path %></li>
            <% else %>
            <li class="btn col-md-2 "><%= link_to 'LogOut', destroy_user_session_path , :method => :delete %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <aside class="col-md-2">
      <div class="row">
        <ul>

        <% @Categories.each do |category| %>
          <li class="btn">
            <%= link_to category.name_category, category %> 
          </li>
        <% end %>
        </ul>
      </div>
    </aside>
    <div class="col-md-10">
        <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <footer class="col-lg-12 center text-center">
      <p> Keilabs Â®2017</p>
    </footer>
  </div>
  </body>

</html>
