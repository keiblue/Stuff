<!DOCTYPE html>
<html>
  <head>
    <title>ChoroStore</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i|Roboto+Mono:300,300i,400,400i,500,500i,700,700i|Roboto+Slab:300,400,700|Roboto:300,300i,400,400i,500,500i,700,700i&amp;subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css" type="text/css" >
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid no-padding">
      <header>
        <%= link_to image_tag("/images/logo2.png", class: "img-responsive") , root_path , class: "set-logo"%>
        <nav>
          <%= link_to info_path, :class => 'btn-nav' do %>
            <i class="fa fa-home" aria-hidden="true"></i>
            <span class="hide-on-small-mobile ml-3">Quienes Somos</span>
          <% end %>
          <%= link_to all_path, :class => 'btn-nav' do %>
            <i class="fa fa-home" aria-hidden="true"></i>
            <span class="hide-on-small-mobile ml-3">Catalogo</span>
          <% end %>

          <%= link_to contact_path, :class => 'btn-nav' do %>
            <i class="fa fa-home" aria-hidden="true"></i>
            <span class="hide-on-small-mobile ml-3">Contacto</span>
          <% end %>

          <% unless user_signed_in? %>
            <%= link_to new_user_session_path, :class => 'btn-nav' do %>
              <i class="fa fa-user" aria-hidden="true"></i>
              <span class="hide-on-small-mobile ml-3">Log In</span>
            <% end %>
            <%= link_to new_user_registration_path, :class => 'btn-nav' do %>
              <i class="fa fa-user-plus" aria-hidden="true"></i>
              <span class="hide-on-small-mobile ml-3">New User</span>
            <% end %>
          <% else %>
            <%= link_to destroy_user_session_path, :class =>  'btn-nav', :method => :delete do %>
              <i class="fa fa-user-o" aria-hidden="true"></i>
              <span class="hide-on-small-mobile ml-3">Log Out</span>
            <% end %>
          <%end%>
        </nav>
      </header>
      <aside >
        <ul >
          <% @Categories.each do |category| %>
          <li><%= link_to category.name_category, category, class:'btn' %></li>
          <% end %>
        </ul>
      </aside>
      <div class="content-col">
        <%= yield %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
  </div>
  <footer class=" col-md-12 center text-center">
    <div class="">
      <p> Keilabs Â®2017</p>
    </div>
  </footer>
  </body>

</html>
